TRANSACTION
	$db = Yii::$app->db;
	$myTransaction = $db->beginTransaction();
	try {
		$db->createCommand($sql1)->execute();
		$db->createCommand($sql2)->execute();
		$myTransaction->commit();
	}
	catch(\Throwable $e) {
		$myTransaction->rollBack();
	}
	
